<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/dotori"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/dotori" />

    <TextView
        android:id="@+id/dotori_text"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/dotori"
        android:layout_centerHorizontal="true"
        android:text="DOTORI"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#66CCFF"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/dotori_text"
        android:layout_centerHorizontal="true"
        android:hint="                      @gsm.hs.kr"
        android:layout_marginTop="15dp"
        android:background="@drawable/memo_border"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/memo_border"
        android:layout_marginTop="15dp"
        android:hint="   비밀번호"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <View
        android:id="@+id/view"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_below="@id/login_button"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/join_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/view"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/join"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view"
            android:text="아직 계정이 없으신가요?"
            android:gravity="end"
            android:layout_marginEnd="3dp"/>
        <TextView
            android:id="@+id/go_join"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:text="회원가입"
            android:gravity="start"
            android:layout_marginStart="3dp"
            android:textColor="#99CCFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/join_layout"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/join"
            android:text="비밀번호를 잊으셨나요?"
            android:gravity="end"
            android:layout_marginEnd="3dp"/>
        <TextView
            android:id="@+id/find_password"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:text="비밀번호 찾기"
            android:gravity="start"
            android:layout_marginStart="3dp"
            android:textColor="#99CCFF"/>

    </LinearLayout>

</RelativeLayout>